<% include ../partials/header_test %>

<div class="container">
    <div class="row">
        
        <div style="margin: 25px auto;">
            <h1 style="text-align: center">Edit Lesson:  <%= lesson.text %></h1>
            <form action="/courses/<%= course_id %>/lessons/<%= lesson._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="lesson[name]" value="<%= lesson.name %>">
                    <input class="form-control" type="text" name="lesson[number]" value="<%= lesson.number %>">
                    <input class="form-control" type="text" name="lesson[section]" value="<%= lesson.section %>">
                    <input class="form-control" type="text" name="lesson[description]" value="<%= lesson.description %>">
                </div>
                
                
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Save Edited Lesson</button>
                </div>
            </form>
            <a href="/courses">Go Back</a>
        </div>

    </div>

</div>

<% include ../partials/footer %>






