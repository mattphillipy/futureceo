<% include ../partials/header_test %>
    

<div class="container">

<div>
    <div class="container">
        <div><strong>RESTful Route:  </strong>Index</div>
        <div><strong>Path: </strong>/courses</div>
        <div><strong>HTTP Verb: </strong>GET</div>
        <div><strong>Purpose: </strong>List all courses in Mongo "courses" collection</div>
        <div><strong>Mongo Collection: </strong>courses</div>
        <div><strong>Mongoose Path: </strong>Course.find()</div>
        <p> <a class="btn btn-primary btn-lg" href="/courses/new">Add New Course</a></p>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
        
        <% courses.forEach(function(course){ %>
            <div class="col-md-3 col-sm-6 course-summary-border">
                <div class="thumbnail">
                    <div class="caption">
                         <h5><%= course.name %></h5>
                         <div class="course-summary">Category:  <%= course.category %></div>
                         <div class="course-summary">Series:  <%= course.series %></div>
                         <div class="course-summary">Description:  <%= course.description %></div>
                         
                    </div>
                    <p>
                        <a href="/courses/<%= course._id %>" class="btn btn-primary">Go To Course</a>
                    </p>
                </div>
               
                
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>
